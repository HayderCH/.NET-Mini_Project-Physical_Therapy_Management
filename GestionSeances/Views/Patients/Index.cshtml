@model IEnumerable<Patient>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="searchString" value="@Context.Request.Query["searchString"]" placeholder="Search by name" class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nomp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrenomP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumTel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nomp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrenomP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumTel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdP">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdP">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdP">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
